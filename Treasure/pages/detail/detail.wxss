Page {
  background-color: #fff;
}

.smallImages {
  width: 100%;
  height: 750rpx;
}

.smallImages image {
  width: 100%;
  height: 750rpx;
}

.goodsDes {
  padding: 20rpx;
  font-size: 28rpx;
}

.title {
  display: flex;
}

.title .pic {
  width: 32rpx;
  height: 32rpx;
}

.title .name {
  color: #333;
  margin-left: 10rpx;
  line-height: 30rpx;
}

.price {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}

.price .lqj {
  font-size: 36rpx;
  color: #e64340;
}

.price .yj {
  text-decoration: line-through;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.coupon {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}

.coupon .q {
  color: #e64340;
}

.coupon .xl {
  font-size: 20rpx;
  margin-left: 20rpx;
}

.des {
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.tkl {
  position: fixed; /*悬停搜索框的关键样式*/
  z-index: 999;
  background-color: #eee;
  display: flex;
  bottom: 0;
  padding-left: 60rpx;
  width:100%;
  height: 90rpx;
}

.tkl-btn {
  right: 0;
  background-color: #e64340;
  color: #fff;
  width: 50%;
  position: absolute;
  font-size: 30rpx;
  font-weight: bolder;
  height: 90rpx;
  display: flex;
  flex-flow:row wrap;
  justify-content:space-around;
  align-items: center;
}

.tkl-btn text{
  margin-left:-60rpx;
}
