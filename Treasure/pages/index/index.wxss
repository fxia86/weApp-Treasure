.couponPic {
  width: 48rpx;
  height: 48rpx;
  margin-top: -4rpx;
}

.goods.coupon .q {
  font-weight: bolder;
  border: 1rpx dashed #e64340;
  height: 32rpx;
  width: 80rpx;
  text-align: right;
  margin: 2rpx 0 0 -50rpx;
  line-height: 36rpx;
}
